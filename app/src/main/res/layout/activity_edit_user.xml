<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="github.nixo.com.MVP.View.auth.UserActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/user_bg"
            android:layout_width="match_parent"
            android:layout_height="203dp" />
        <ImageView
            android:src="#16000000"
            android:layout_width="match_parent"
            android:layout_height="203dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/back"
                    android:layout_marginTop="35dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/user_toolbar_bg"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp" />

                <RelativeLayout
                    android:id="@+id/user_bar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/user_card"
                    android:background="#7b24292f"
                    >

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_repositories"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Repositories"
                            android:textColor="@drawable/radio_bg"
                            android:textSize="13dp" />

                        <RadioButton
                            android:id="@+id/rb_start"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Star"
                            android:textColor="@drawable/radio_bg"
                            android:textSize="13dp" />

                        <RadioButton
                            android:id="@+id/rb_followers"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Followers"
                            android:textColor="@drawable/radio_bg"
                            android:textSize="13dp" />

                        <RadioButton
                            android:id="@+id/rb_followering"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Followering"
                            android:textColor="@drawable/radio_bg"
                            android:textSize="13dp" />
                    </RadioGroup>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/user_card"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <cn.carbs.android.avatarimageview.library.AppCompatAvatarImageView
                        android:id="@+id/user_img"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/nothing" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_img"
                        android:layout_alignLeft="@+id/user_img"
                        android:layout_marginLeft="109dp"
                        android:layout_marginTop="-79dp"
                        android:text="Nixo"
                        android:textColor="#fff"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/user_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_img"
                        android:layout_alignLeft="@+id/user_img"
                        android:layout_marginLeft="111dp"
                        android:layout_marginTop="-34dp"
                        android:text="Dear You ❤"
                        android:textColor="#fff"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/user_flower"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:textColor="#4d4b4b"
                        android:textSize="13dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/user_flower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="33dp"
                        android:layout_marginRight="80dp"
                        android:maxLines="1"
                        android:textColor="#4d4b4b"
                        android:textSize="13dp"
                        android:visibility="gone" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rv_user_fragmentContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
